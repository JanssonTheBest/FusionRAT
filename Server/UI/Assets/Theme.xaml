<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Normal works for setters and Forground-->
    <SolidColorBrush x:Key="Primary" Color="#202020"/>
    <SolidColorBrush x:Key="Secondary" Color="#2B2B2B"/>
    <SolidColorBrush x:Key="Border" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="Accent" Color="#1E9BFD"/>
    <SolidColorBrush x:Key="Text" Color="#DEDEE0"/>
    <SolidColorBrush x:Key="Selected" Color="#4B4990"/>

    <!--To triggers works all triggers-->
    <Color x:Key="Trigger_Primary">#202020</Color>
    <Color x:Key="Trigger_Secondary">#08FFFFFF</Color>
    <Color x:Key="Trigger_Border">#3A3A3A</Color>
    <Color x:Key="Trigger_Accent">#1E9BFD</Color>
    <Color x:Key="Trigger_Text">#DEDEE0</Color>
    <Color x:Key="Trigger_Selected">#4B4990</Color>


</ResourceDictionary>