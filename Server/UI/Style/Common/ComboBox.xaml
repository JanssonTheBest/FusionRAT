<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Common_ComboBox" TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <!--ToggleButton content style *-->
                        <ContentPresenter/>

                        <Popup IsOpen="{TemplateBinding IsChecked}"
                           Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide" 
                           VerticalOffset="2"
                           StaysOpen="False"
                           Placement="Bottom">

                            <!--Dropdown content style *-->
                            <ContentPresenter Content="{TemplateBinding Tag}" HorizontalAlignment="Stretch"/>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>