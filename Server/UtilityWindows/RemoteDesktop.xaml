<Window x:Class="Server.UtilityWindows.RemoteDesktop" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:header="clr-namespace:Server.UI.CustomControls.WindowHeaders"
        xmlns:helpers="clr-namespace:Server.UI.Style.Common.CommonHelper"
        Title="Remote Desktop - Fusion" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen"
        MinHeight="270" MinWidth="480" Height="600" Width="1000" Foreground="{DynamicResource Text}" PreviewMouseDown="Window_PreviewMouseDown">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="2.2" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="Display" TargetType="RadioButton">
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource Text}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent" Height="{TemplateBinding Height}" Margin="{TemplateBinding Margin}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Border x:Name="pid" Height="{Binding ElementName=header, Path=Height}" Width="2" CornerRadius="1" Background="{DynamicResource Accent}" Margin="6,0,6,0" Opacity="0"/>
                                <TextBlock x:Name="header" Text="{TemplateBinding Content}" FontSize="{TemplateBinding FontSize}" Foreground="{TemplateBinding Foreground}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Grid VerticalAlignment="Center" Margin="0,0,10,0">
                                    <Border x:Name="recordPid_Hover" Height="12" Width="12" Background="Red" CornerRadius="6" Opacity="0"/>
                                    <ToggleButton Background="Transparent" BorderThickness="0">
                                        <Border x:Name="recordPid_Checked" Height="12" Width="12" Background="Red" CornerRadius="6" Opacity="0"/>
                                        <ToggleButton.Triggers>
                                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="recordPid_Checked"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="1" Duration="0:0:0.15">
                                                            <DoubleAnimation.EasingFunction>
                                                                <QuadraticEase EasingMode="EaseInOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="recordPid_Checked"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.15">
                                                            <DoubleAnimation.EasingFunction>
                                                                <QuadraticEase EasingMode="EaseInOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ToggleButton.Triggers>
                                    </ToggleButton>
                                </Grid>
                                <ToggleButton Height="17" Width="17" Margin="0,0,8,0" Background="Transparent" BorderThickness="0" Opacity="0.6 ">
                                    <Path Fill="{DynamicResource Icon}" Stretch="Uniform" Data="M 31.20 50.00 A 12.45 12.45 0.0 0 1 18.75 62.45 A 12.45 12.45 0.0 0 1 6.30 50.00 A 12.45 12.45 0.0 0 1 18.75 37.55 A 12.45 12.45 0.0 0 1 31.20 50.00 Z M 62.45 50.00 A 12.45 12.45 0.0 0 1 50.00 62.45 A 12.45 12.45 0.0 0 1 37.55 50.00 A 12.45 12.45 0.0 0 1 50.00 37.55 A 12.45 12.45 0.0 0 1 62.45 50.00 Z M 93.70 50.00 A 12.45 12.45 0.0 0 1 81.25 62.45 A 12.45 12.45 0.0 0 1 68.80 50.00 A 12.45 12.45 0.0 0 1 81.25 37.55 A 12.45 12.45 0.0 0 1 93.70 50.00 Z"/>
                                </ToggleButton>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="pid"
                                                      Storyboard.TargetProperty="Opacity"
                                                      To="1" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="pid"
                                                      Storyboard.TargetProperty="Opacity"
                                                      To="0" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="recordPid_Hover"
                                                      Storyboard.TargetProperty="Opacity"
                                                      To="0.2" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="recordPid_Hover"
                                                      Storyboard.TargetProperty="Opacity"
                                                      To="0" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border CornerRadius="2" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Border x:Name="bg" Opacity="0" CornerRadius="2" Background="{TemplateBinding Tag}"/>
                                <ContentPresenter/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Opacity" Value="1"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="False"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Opacity" Value="0.5" TargetName="bg"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ControlPanel_TBTN" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                Width="{TemplateBinding Width}" 
                                Height="{TemplateBinding Height}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <Border x:Name="bg" Background="#0FFFFFFF" CornerRadius="4" Opacity="0"/>
                                <Path Margin="-1,0,0,0" Width="21" Height="21" Fill="{DynamicResource Icon}" Stretch="Uniform" Data="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="bg"
                                                              Storyboard.TargetProperty="Opacity"
                                                              To="1" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="bg"
                                                              Storyboard.TargetProperty="Opacity"
                                                              To="0" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Storyboard x:Key="ControlPanel_Triggered">
            <ThicknessAnimation Storyboard.TargetName="controlPanel_Grid"
                         Storyboard.TargetProperty="Margin"
                         To="0" Duration="0:0:0.15">
                <ThicknessAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>

            <DoubleAnimation Storyboard.TargetName="controlPanel"
                      Storyboard.TargetProperty="Opacity"
                      To="1" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="controlPanel" 
                        Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ControlPanel_Default_Down">
            <ThicknessAnimation Storyboard.TargetName="controlPanel_Grid"
                         Storyboard.TargetProperty="Margin"
                         To="0,0,0,-51" Duration="0:0:0.15">
                <ThicknessAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>

            <DoubleAnimation Storyboard.TargetName="controlPanel"
                      Storyboard.TargetProperty="Opacity"
                      To="0" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="controlPanel" 
                                    Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.15" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ControlPanel_Default_Up">
            <ThicknessAnimation Storyboard.TargetName="controlPanel_Grid"
                         Storyboard.TargetProperty="Margin"
                         To="0,-51,0,0" Duration="0:0:0.15">
                <ThicknessAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>

            <DoubleAnimation Storyboard.TargetName="controlPanel"
                      Storyboard.TargetProperty="Opacity"
                      To="0" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="controlPanel" 
                                    Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.15" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>


        <Storyboard x:Key="down">
            <DoubleAnimation Storyboard.TargetName="controlPanel_Grid"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                      To="0" Duration="0"/>
            <DoubleAnimation Storyboard.TargetName="controlPanel"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                      To="0" Duration="0"/>
            <ThicknessAnimation Storyboard.TargetName="controlPanel"
                         Storyboard.TargetProperty="BorderThickness"
                         To="0,1,0,0"/>
            <ThicknessAnimation Storyboard.TargetName="controlPanel_Grid"
                         Storyboard.TargetProperty="Margin"
                         To="0,0,0,-51" Duration="0">
            </ThicknessAnimation>
            <ThicknessAnimation Storyboard.TargetName="screenControl"
                         Storyboard.TargetProperty="Margin"
                         To="0,-69,-139,60" Duration="0">
            </ThicknessAnimation>
            <ThicknessAnimation Storyboard.TargetName="randomControl"
                         Storyboard.TargetProperty="Margin"
                         To="0,-57,-147,60" Duration="0">
            </ThicknessAnimation>
        </Storyboard>
        <Storyboard x:Key="up">
            <DoubleAnimation Storyboard.TargetName="controlPanel_Grid"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                      To="180" Duration="0"/>
            <DoubleAnimation Storyboard.TargetName="controlPanel"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                      To="180" Duration="0"/>
            <ThicknessAnimation Storyboard.TargetName="controlPanel"
                         Storyboard.TargetProperty="BorderThickness"
                         To="0,0,0,1"/>
            <ThicknessAnimation Storyboard.TargetName="controlPanel_Grid"
                         Storyboard.TargetProperty="Margin"
                         To="0,-50,0,0" Duration="0">
            </ThicknessAnimation>
            <ThicknessAnimation Storyboard.TargetName="screenControl"
                         Storyboard.TargetProperty="Margin"
                         To="0,60,-139,-68" Duration="0">
            </ThicknessAnimation>
            <ThicknessAnimation Storyboard.TargetName="randomControl"
                         Storyboard.TargetProperty="Margin"
                         To="0,60,-147,-57" Duration="0">
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <Border Background="{DynamicResource Secondary}" BorderThickness="1" BorderBrush="{DynamicResource Border}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TitleBar -->
            <Grid Panel.ZIndex="2" Background="{DynamicResource Primary}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" MouseMove="TitleBar_MouseMove" MouseLeftButtonUp="TitleBar_MouseLeftButtonUp">
