<Window x:Class="Server.UtilityWindows.RemoteDesktop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RemoteDesktop" Height="450" Width="800">
    <Grid>
        <ComboBox Height="30" VerticalAlignment="Top" x:Name="screens" />
        <Image x:Name="icon" Visibility="Hidden"/>
        <Label Foreground="LightGreen" Name="fpsLabel" FontSize="20" Content="0" Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Image x:Name="frame" HorizontalAlignment="Stretch" Panel.ZIndex="-1" VerticalAlignment="Stretch" Stretch="Fill"/>
    </Grid>
</Window>