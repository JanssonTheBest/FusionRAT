                        </Border>
                    </Button.Content>
                </Button>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="2">
                <Image x:Name="frame" Stretch="Fill" Panel.ZIndex="-1"/>
            </Grid>

            <Grid x:Name="controlPanel_Grid" Height="71" VerticalAlignment="Bottom" Margin="0,0,0,-51" Grid.Row="1">
                <Grid.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Grid.RenderTransform>
                <Grid.RenderTransformOrigin>
                    <Point X="0.5" Y="0.5"/>
                </Grid.RenderTransformOrigin>
                <ToggleButton x:Name="controlPanel_TBTN" Background="{DynamicResource Primary}" Height="21" Width="40" VerticalAlignment="Top" BorderBrush="{DynamicResource Border}"
                              MouseRightButtonDown="controlPanel_TBTN_RightMouseDown" PreviewMouseMove="controlPanel_TBTN_MouseMove" MouseRightButtonUp="controlPanel_TBTN_RightMouseUp"
                              Checked="controlPanel_TBTN_Checked" Unchecked="controlPanel_TBTN_Unchecked">
                    <ToggleButton.Tag>
                        <SolidColorBrush Color="#0FFFFFFF"/>
                    </ToggleButton.Tag>
                </ToggleButton>

                <Border x:Name="controlPanel" Opacity="1" Visibility="Visible" Background="{DynamicResource Primary}" Margin="0,20,0,0" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource Border}">
                    <Border.RenderTransform>
                        <RotateTransform Angle="0"/>
                    </Border.RenderTransform>
                    <Border.RenderTransformOrigin>
                        <Point X="0.5" Y="0.5"/>
                    </Border.RenderTransformOrigin>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <Grid>
                            <Border x:Name="screenControl" Opacity="0" Visibility="Collapsed" Background="{DynamicResource Primary}" Margin="0,-69,-139,60" BorderThickness="1" BorderBrush="{DynamicResource Border}" CornerRadius="2">
